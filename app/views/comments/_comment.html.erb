<div class="comment">
  <p>
    <b><%= link_to comment.user.name, user_path(comment.user.name) %></b> wrote
    <% if comment.created_at > Date.yesterday.end_of_day %>
        <i>today at <%= comment.created_at.strftime("%H:%M:%S") %></i>
    <% elsif comment.created_at > Date.yesterday.beginning_of_day %>
        <i>yesterday at <%= comment.created_at.strftime("%H:%M:%S") %></i>
    <% else %>
        on <i><%= comment.created_at %></i>:
    <% end %>
    <% if is_owner_or_author?(comment) %>
        <%= link_to "[e]", edit_comment_path(comment) %>
        <%= link_to "[x]", comment, :confirm => 'Delete comment?', :method => :delete %>
    <% end %>
    <br>
    <%= comment.content %>
</p>
</div>
