<h2><%= @album.name %></h2>
<div id="pictures">
<% if @album.pictures.empty? %>
      <p>This gallery contains no pictures (yet).</p>
  <% else %>
      <% for picture in @album.pictures %>
          <div class="picture">
            <%= link_to image_tag(picture.image_url(:thumb)), picture_path(picture) %>
            <div class="name">
              <%= link_to picture.name, picture_path(picture) %>
              [<%= picture.comments.count %> comments]
              <br/>
              <i><%= sanitize(truncate(picture.description),:length => 150) %></i>
            </div>
            <div class="actions">
              <%= link_to "edit", edit_picture_path(picture) %> |
              <%= link_to "delete", picture, :confirm => 'Really delete picture?', :method => :delete %>
            </div>
          </div>
      <% end %>
  <% end %>
  <div class="clear"></div>
  <br/>
  <%= link_to "...return to " + @album.user.name + "'s profile", user_path(@album.user.name) %>
  <% if is_owner?(@album) %>
      | <%= link_to "Edit gallery", edit_album_path(@album) %>
      | <%= link_to "Add picture", new_album_picture_path(@album.id) %>
  <% end %>
  <hr/>
  <%= render @comments %>
  <%= render :partial => 'comments/form' %>
</div>