<h2><%= @album.name %></h2>
<div id="pictures">
<% if @album.pictures.empty? %>
      <p>This gallery contains no pictures (yet).</p>
  <% else %>
      <%= render @album.pictures %>
  <% end %>
  <div class="clear"></div>
  <br/>
  <%= link_to "...return to " + @album.user.name + "'s profile", user_path(@album.user.name) %>
  <% if is_owner?(@album) %>
      | <%= link_to "Edit gallery", edit_album_path(@album) %>
      | <%= link_to "Add picture", new_album_picture_path(@album.id) %>
  <% end %>
  <hr/>
  <%= render @comments %>
  <%= render :partial => 'comments/form' %>
</div>